<li data-id="[+id+]">
	<div class="evocontentgallery__wrapper_list__item" data-id="[+id+]">
		<div class="evocontentgallery_imgwrapp text-center pull-left text-center">
			<div class="evocontentgallery_name"><b>[+name+]</b></div>
			[+image+]
		</div>
		<div class="evocontentgallery_snippet text-left pull-left">
			<div class="evocontentgallery_count"><b>Изображений:&nbsp;[+count+]</b></div>
			<input id="plgEvCont_[+id+]" type="text" value="[+snippet+]" readonly="readonly" />
			<div class="evocontentgallery_copy">
				<input type="button" value="Copy" data-id="plgEvCont_[+id+]" />
			</div>
		</div>
	</div>
</li>